#yellow .navs {border-top: 1px solid #CCCCCC;}
#yellow .nav_ntext{color: #999;}

/* 健身 */
#dark { width: 100%; background-color: #242424;height: 100%;}
#dark .servecon .tit .yellow{display: none;}
#dark .servecon .tit .pink{display: none;}