page{
  color: #333;
  /* background-color:#242424; */
  font:30rpx/1.5 "Microsoft YaHei";
  height: 100%; 
  margin:0;padding:0;
}

.container {
  height: 100%;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
} 
.flexbox{
	display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
}
.flex{
	-webkit-box-flex: 1;
  -webkit-flex: 1;
  -ms-flex: 1;
  flex: 1;
}
.flexcenter{
  -webkit-box-align: center;
  -webkit-align-items: center;
  -ms-flex-align: center;
  align-items: center;
}

button.btn-common{
 background: #febb45;
 color:#fff;
 font-size:36rpx;
 padding:0;
 width: 100%;
 height: 100rpx;
 line-height: 100rpx;
 text-align: center;
 border-radius:12rpx;
 border:none;
 margin-left:10rpx;
 margin:auto;
 margin-top:60rpx;
}
button.smallbtn{
  display: inline-block;
  background: #ca4147;
  color:#fff;
  padding:0 18rpx;
  height: 40rpx;
  line-height: 40rpx;
  font-size:25rpx;
  border-radius: 5rpx;
}
.btn-hover{
 background: #33a78f;
}
.clearfix::after{
  content: "";
  display: block;
  clear:both;
}
button::after{
border: none;
}

.paddinglr{
  padding:0 30rpx;
}
.nodata{
  width:206rpx;
  height:230rpx;
  display: block;
  margin:auto;
  padding-top:280rpx;
}
.dataOver{
   color:#9d9d9d;
   text-align: center;
   padding: 20rpx 0;
}
.hide{
  display: none;
}
.show{
  display: inline-block;
}

/**输入手机**/
.getPhonefixed{
  position: fixed;
  top:0;
  right: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, .7);
  z-index: 100;
}
.getPhonebox{
  position: absolute;
  top:0;
  left:0;
  right:0;
  bottom: 0;
  margin:auto;
  width: 600rpx;
  height: 280rpx;
  border-radius:5rpx;
  padding:40rpx 0;
  text-align: center;
  background: #fff;
}
.phonewhite{
  border:1rpx solid #efefef;
  width: 80%;
  padding:20rpx 0;
  display: inline-block;
  margin-top:30rpx;
  font-size:34rpx;
}
.phtip{
  font-size: 34rpx;
}
.pbtns{
  position: absolute;
  width: 100%;
  height: 120rpx;
  left:0;
  bottom: 0;
}
.pbtn{
  border-radius:0;
  background:#fff!important;
  border-top:1rpx solid #efefef;
  font-size:34rpx;
  height: 100rpx;
  line-height: 100rpx;
}
.pgreen[type="default"]{
  color:#3cc51f!important;
  border-left:1rpx solid #efefef;
}
